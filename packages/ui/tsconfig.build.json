{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "skipLibCheck": true,
    "types": ["react", "react-dom"],
    "jsx": "react-jsx"
  },
  "include": ["src"],
  "exclude": ["src/__tests__", "**/*.test.ts", "**/*.test.tsx"]
}
